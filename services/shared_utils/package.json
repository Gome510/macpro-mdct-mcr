{
  "name": "shared-utils",
  "description": "",
  "version": "1.0.0",
  "main": "handler.js",
  "scripts": {
    "coverage": "jest --coverage",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-serverless": "serverless-bundle test"
  },
  "author": "",
  "license": "CC0-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/AnomalyInnovations/serverless-nodejs-starter.git"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/jsdom": "^20.0.0",
    "@types/md5": "^2.3.2",
    "aws-sdk-client-mock": "^3.0.1",
    "jest": "^27.4.7",
    "serverless-associate-waf": "^1.2.1",
    "serverless-plugin-common-excludes": "^4.0.0",
    "serverless-plugin-include-dependencies": "^5.1.0",
    "serverless-plugin-typescript": "^2.1.4",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@aws-sdk/s3-request-presigner": "^3.490.0",
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/util-dynamodb": "^3.540.0"
  },
  "resolutions": {
    "nwsapi": "^2.2.5",
    "xml2js": "^0.5.0"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "globals": {
      "isolatedModules": true
    },
    "coverageReporters": [
      "json",
      [
        "lcov",
        {
          "projectRoot": "../../"
        }
      ],
      "text",
      "text-summary"
    ],
    "collectCoverageFrom": [
      "handlers/**/*.{ts,tsx}",
      "utils/**/*.{ts,tsx}",
      "!utils/constants/*",
      "!utils/testing/*",
      "!utils/types/*"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/.build/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/utils/testing/setupJest.ts"
    ]
  }
}
